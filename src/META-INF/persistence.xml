<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="DeliveryServicePU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>student.entities.City</class>
        <class>student.entities.Courier</class>
        <class>student.entities.CourierRequest</class>
        <class>student.entities.District</class>
        <class>student.entities.Drive</class>
        <class>student.entities.Package</class>
        <class>student.entities.TransportOffer</class>
        <class>student.entities.User</class>
        <class>student.entities.Vehicle</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:sqlserver://localhost:1433;databaseName=si4sab"/>
            <property name="hibernate.connection.driver_class" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
